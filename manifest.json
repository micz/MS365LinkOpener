{
    "manifest_version": 2,
    "name": "Microsoft 365 Link Opener",
    "description": "__MSG_extensionDescription__",
    "version": "1.1.3",
    "author": "Micz (m@micz.it)",
    "homepage_url": "https://micz.it/thunderdbird-addon-microsoft365linkopener/",
    "browser_specific_settings": {
        "gecko": {
            "id": "ms365linkopener@micz.it",
            "strict_min_version": "115.0"
        }
    },
    "icons": {
        "64": "images/icon.png",
        "32": "images/icon-32.png",
        "16": "images/icon-16.png"
    },
    "permissions": [
        "messagesRead",
        "messagesModify",
		"storage"
    ],
    "background": {
        "page": "mzmo-background.html"
    },
	
	"default_locale": "en",
	
	"options_ui": {
		"page": "options/mzmo-options.html"
	}

}